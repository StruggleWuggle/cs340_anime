            {% endfor %}
        </ul>
    </div>
</nav>

<body>
    <div class="content">
        {% block content %}
        <h1>Anime Recommender App</h1>
        <p>Something about how this is the greatest app ever.</p>
        {% endblock %}
    </div>

    <script src="{{ url_for('static', filename='script.js') }}"></script>
</body>
</html>
